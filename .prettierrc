{
  "trailingComma": "none",
  "plugins": [
    "prettier-plugin-apex",
    "prettier-plugin-sf-xml"
  ],
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc"
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.xml",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.cls",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
